{
  "meta": {
    "appName": "FataPlus",
    "appUrl": "https://backend.fata.plus",
    "hideControls": false,
    "logoUrl": "/logo.png",
    "senderName": "FataPlus",
    "senderAddress": "noreply@fata.plus"
  },
  "logs": {
    "maxDays": 7
  },
  "smtp": {
    "enabled": true,
    "host": "smtp.example.com",
    "port": 587,
    "username": "{{SMTP_USERNAME}}",
    "password": "{{SMTP_PASSWORD}}",
    "tls": true
  },
  "s3": {
    "enabled": true,
    "bucket": "fataplus-uploads",
    "region": "eu-west-3",
    "endpoint": "s3.eu-west-3.amazonaws.com",
    "accessKey": "{{S3_ACCESS_KEY}}",
    "secret": "{{S3_SECRET_KEY}}",
    "forcePathStyle": false
  },
  "backups": {
    "cronMaxKeep": 5,
    "cronSchedule": "0 0 * * *"
  },
  "db": {
    "type": "postgres",
    "connection": "postgres://{{PG_USERNAME}}:{{PG_PASSWORD}}@{{PG_HOST}}:{{PG_PORT}}/{{PG_DATABASE}}?sslmode=require"
  }
}
