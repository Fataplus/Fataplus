# =============================================================================
# Fataplus Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# =============================================================================
# Application Configuration
# =============================================================================
NUXT_PUBLIC_API_BASE="/api"
NUXT_PUBLIC_SITE_URL="http://localhost:3000"

# =============================================================================
# Authentication
# =============================================================================
NUXT_AUTH_SECRET="your-super-secret-auth-key-change-this-in-production"

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="./server/database/sqlite.db"

# =============================================================================
# AI Services
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key-here"

# =============================================================================
# Payment Processing
# =============================================================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
NUXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# =============================================================================
# Media Management
# =============================================================================
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================================================
# Email Services
# =============================================================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-email-password"
EMAIL_FROM="noreply@fataplus.mg"

# =============================================================================
# Real-time Communications
# =============================================================================
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"
NUXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NUXT_PUBLIC_PUSHER_CLUSTER="your-pusher-cluster"

# =============================================================================
# External Integrations
# =============================================================================
CLOUDRON_URL="https://my.fata.plus"

# =============================================================================
# Development Settings
# =============================================================================
NODE_ENV="development"
DEBUG="true"
