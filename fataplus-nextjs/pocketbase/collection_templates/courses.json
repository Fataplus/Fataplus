{
  "name": "courses",
  "type": "base",
  "schema": [
    {
      "name": "title",
      "type": "text",
      "required": true
    },
    {
      "name": "description",
      "type": "text",
      "required": true
    },
    {
      "name": "lessons",
      "type": "number",
      "required": true,
      "options": {
        "min": 1
      }
    },
    {
      "name": "imageUrl",
      "type": "file",
      "required": false,
      "options": {
        "maxSelect": 1,
        "mimeTypes": [
          "image/jpeg",
          "image/png",
          "image/svg+xml",
          "image/gif",
          "image/webp"
        ]
      }
    },
    {
      "name": "category",
      "type": "text",
      "required": true
    }
  ]
}
